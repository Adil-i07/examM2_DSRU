// 1. ระบบจำตำแหน่งและโหลดหน้าเดิม
window.onload = function() {
    const lastPos = localStorage.getItem('scrollPos');
    const lastSubject = localStorage.getItem('openSubject');
    if (lastSubject) {
        const data = JSON.parse(lastSubject);
        openFull(data.name, data.code, data.time, data.content, data.p, data.a, true);
    } else if (lastPos) {
        window.scrollTo(0, lastPos);
    }
    updateCountdowns();
};

window.onscroll = function() {
    if (document.getElementById('main-view').style.display !== 'none') {
        localStorage.setItem('scrollPos', window.scrollY);
    }
};

// 2. ฟังก์ชันเปิดหน้าละเอียด + โหลด Quiz
function openFull(name, code, time, content, p, a, isRestore = false) {
    document.getElementById('main-view').style.display = 'none';
    document.getElementById('detail-view').style.display = 'block';
    
    document.getElementById('full-name').innerText = name;
    document.getElementById('full-code').innerText = code;
    document.getElementById('full-time').innerText = time;
    document.getElementById('full-p').innerText = p;
    document.getElementById('full-a').innerText = a;
    document.getElementById('full-content').innerHTML = content.split(',').join('<br>• ');

    loadQuiz(name);

    if (!isRestore) {
        localStorage.setItem('openSubject', JSON.stringify({name, code, time, content, p, a}));
        window.scrollTo(0, 0);
    }
}

function closeFull() {
    document.getElementById('main-view').style.display = 'block';
    document.getElementById('detail-view').style.display = 'none';
    localStorage.removeItem('openSubject');
    const lastPos = localStorage.getItem('scrollPos');
    window.scrollTo(0, lastPos || 0);
}

// 3. ระบบ Quiz Logic
function loadQuiz(subjectName) {
    const container = document.getElementById('quiz-container');
    const questions = quizData[subjectName] || [];
    container.innerHTML = "";

    questions.forEach((item, qIdx) => {
        const quizItem = document.createElement('div');
        quizItem.className = 'quiz-item';
        quizItem.innerHTML = `
            <p><b>ข้อที่ ${qIdx + 1}:</b> ${item.q}</p>
            <div id="options-q${qIdx}">
                ${item.options.map((opt, oIdx) => `
                    <button class="option-btn" onclick="checkAnswer(${qIdx}, ${oIdx}, ${item.correct})">${opt}</button>
                `).join('')}
            </div>
            <div id="exp-q${qIdx}" class="explanation">📎 เฉลย: ${item.exp}</div>
        `;
        container.appendChild(quizItem);
    });
}

function checkAnswer(qIdx, selectedIdx, correctIdx) {
    const optionsDiv = document.getElementById(`options-q${qIdx}`);
    const buttons = optionsDiv.getElementsByTagName('button');
    const expDiv = document.getElementById(`exp-q${qIdx}`);

    // ห้ามกดซ้ำ
    if (buttons[0].disabled) return;

    for (let i = 0; i < buttons.length; i++) {
        buttons[i].disabled = true;
        if (i === correctIdx) buttons[i].classList.add('correct');
        if (i === selectedIdx && selectedIdx !== correctIdx) buttons[i].classList.add('wrong');
    }
    expDiv.style.display = 'block';
}

// 4. ระบบนับถอยหลัง
function updateCountdowns() {
    const now = new Date();
    const target1 = new Date('2026-03-02T08:30:00');
    const target2 = new Date('2026-03-05T08:30:00');

    function getDays(target) {
        const diff = target - now;
        const days = Math.ceil(diff / (1000 * 60 * 60 * 24));
        return days > 0 ? days : "สอบแล้ว";
    }

    document.getElementById('days-mon').innerText = getDays(target1);
    document.getElementById('days-thu').innerText = getDays(target2);
}
</script>

</body>
</html>
